<% include partials/header.ejs %>
<div class="container mt-3 " style="color:white;">
    <h1 class="text-center mb-4">Add details about Girvi</h1>
    <div class="container" style="width:60%;">
        <form action="/shop/<%= id %>/passbook" method="POST">
            <div class="form-group">
                <label for="amountDeposit">Amount Deposit:</label>
                <input type="number" class="form-control" id="amountDeposit" name="passbookInformation[amountDeposit]" required>
            </div>
            <div class="form-group">
                <label for="depositDate">Deposit Date:</label>
                <input type="date" class="form-control" id="depositDate" name="passbookInformation[date]" required>
            </div>
            <div class="form-group">
                <label for="description">Comments:</label>
                <input type="text" class="form-control" id="description" name="passbookInformation[description]" required>
            </div>
            <button class="btn btn-primary btn-block" type="Submit">Submit</button>
        </form>
    </div>
</div>
<% include partials/footer.ejs %>